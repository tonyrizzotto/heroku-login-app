{
  "name": "heroku-login-app",
  "version": "1.0.0",
  "description": "A simple MERN login application deployed through Heroku.",
  "main": "index.js",
  "scripts": {
    "start": "node backend/index.js",
    "build": "npm run build",
    "install-client": "cd frontend && npm install",
